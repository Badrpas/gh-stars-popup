{
  "name": "gh-stars",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build:core": "yarn esbuild index.js --bundle --outfile=out/bundle.js && yarn insert-token",
    "build:bg": "yarn esbuild background.js --bundle --outfile=out/background.js",
    "build": "yarn build:core && yarn build:bg",
    "dev": "nodemon --ignore 'out/**.js' --exec \"yarn build\"",
    "insert-token": "sed -i \"s/<TOKEN_HERE>/$(cat .token)/g\" ./out/bundle.js"
  },
  "dependencies": {
    "esbuild": "^0.18.13",
    "jquery": "^3.7.0",
    "nodemon": "^3.0.1"
  }
}
